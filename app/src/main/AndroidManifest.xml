<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catrenat.wapps">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wapps">
        <activity
            android:name="com.catrenat.wapps.LoginScreen.LoginScreen"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catrenat.wapps.MainActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.wapps.SoptifyAuthModels.LoginActivity"
            android:exported="false"/>
        <activity
            android:name="com.catrenat.wapps.RegisterActivity"
            android:exported="false"/>
    </application>

</manifest>